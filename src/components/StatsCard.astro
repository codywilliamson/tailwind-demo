---
export interface Props {
  title: string;
  value: string;
  icon: string;
  color?: 'emerald' | 'teal' | 'blue' | 'green' | 'yellow' | 'red' | 'purple';
}

const { title, value, icon, color = "emerald" } = Astro.props;

// Define color variants with emerald theme
const colorVariants: Record<string, string> = {
  emerald: "from-emerald-500 to-emerald-600",
  teal: "from-teal-500 to-teal-600",
  blue: "from-blue-500 to-blue-600",
  green: "from-green-500 to-green-600",
  yellow: "from-yellow-500 to-yellow-600",
  red: "from-red-500 to-red-600",
  purple: "from-purple-500 to-purple-600"
};

const bgGradient = colorVariants[color] || colorVariants.emerald;
---

<div class="bg-gradient-to-br from-white to-emerald-50/30 dark:from-gray-800 dark:to-emerald-900/10 rounded-lg shadow-lg p-4 sm:p-6 transform transition-all duration-300 hover:scale-105 hover:shadow-xl border border-emerald-100/50 dark:border-emerald-900/20 group">
  <div class="flex items-center">
    <div class={`bg-gradient-to-br ${bgGradient} rounded-lg p-2 sm:p-3 shadow-lg`}>
      <span class="text-white">
        <Fragment set:html={icon} />
      </span>
    </div>
    <div class="ml-3 sm:ml-4 flex-1 min-w-0">
      <h3 class="text-gray-500 dark:text-gray-400 text-xs sm:text-sm font-medium uppercase tracking-wide group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors duration-200">{title}</h3>
      <p class="text-xl sm:text-2xl lg:text-3xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 dark:from-gray-100 dark:to-gray-300 bg-clip-text text-transparent group-hover:from-emerald-700 group-hover:to-teal-700 dark:group-hover:from-emerald-300 dark:group-hover:to-teal-300 transition-all duration-300">{value}</p>
    </div>
  </div>
  
  <!-- Mobile-friendly trend indicator -->
  <div class="mt-3 sm:mt-4 flex items-center justify-between">
    <div class="flex items-center space-x-1">
      <svg class="w-3 h-3 sm:w-4 sm:h-4 text-emerald-500 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
      </svg>
      <span class="text-xs text-emerald-600 dark:text-emerald-400 font-medium">Live</span>
    </div>
    <div class="text-xs text-gray-400 dark:text-gray-500">Real-time</div>
  </div>
</div>