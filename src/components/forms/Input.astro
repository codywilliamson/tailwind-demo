---
export interface Props {
  type?: 'text' | 'email' | 'password' | 'number' | 'tel' | 'url' | 'search';
  label?: string;
  placeholder?: string;
  value?: string;
  error?: string;
  required?: boolean;
  disabled?: boolean;
  readonly?: boolean;
  id?: string;
  name?: string;
  autocomplete?: string;
  class?: string;
}

const { 
  type = 'text',
  label,
  placeholder,
  value,
  error,
  required = false,
  disabled = false,
  readonly = false,
  id,
  name,
  autocomplete,
  class: className = '',
  ...rest
} = Astro.props;

const inputId = id || name || crypto.randomUUID();
const hasError = !!error;

const inputClasses = [
  'form-input',
  hasError ? 'border-red-500 focus:ring-red-500' : '',
  className
].filter(Boolean).join(' ');
---

<div class="form-group">
  {label && (
    <label for={inputId} class="form-label">
      {label}
      {required && <span class="text-red-500 ml-1">*</span>}
    </label>
  )}
  
  <input
    type={type}
    id={inputId}
    name={name}
    placeholder={placeholder}
    value={value}
    required={required}
    disabled={disabled}
    readonly={readonly}
    autocomplete={autocomplete}
    class={inputClasses}
    {...rest}
  />
  
  {error && (
    <p class="form-error">
      {error}
    </p>
  )}
</div>